@{
    ViewBag.Title = "Sign Up";
}

@model Project2.Models.Reservation

<style>
    div.validation-message {
        color: rgb(220, 53, 69);
        font-weight: 500
    }
</style>

<h3 class="bg-dark text-white text-center p-1">Make a Reservation</h3>

<form method="post">
    <div asp-validation-summary="All"></div>


        <div class="form-group">
            <label>Group Name:</label>
            <input class="form-control text-success border border-primary bg-light" asp-for="GroupName" />
        </div>


        <div class="form-group">
            <label>Group Size:</label>

            <input class="form-control text-success border border-primary bg-light" asp-for="GroupSize">
        </div>

        <div class="form-group">
            <label>Email:</label>
            <input class="form-control text-success border border-primary bg-light" asp-for="Email" />
        </div>

        <div class="form-group">
            <label>Phone Number:</label>
            <input class="form-control text-success border border-primary bg-light" asp-for="Phone" />
        </div>

        <input type="hidden" asp-for="ReservationId" />
        <input type="hidden" asp-for="TimeSlot" />

        <br />
        <button type="submit" class="btn btn-dark">Sign Up</button>
        <NavLink class="btn btn-light" href="/Home/TimeSlots">Cancel</NavLink>



    
</form>
